// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-t": "terminal_panel::ToggleFocus",
      "shift shift": ["task::Spawn", { "task_name": "forward_search" }]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::ToggleBottomDock",
      "cmd-n": "workspace::NewTerminal"
      //cmd-shift-[ and cmd-shift-] for navigating terminals
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      // put key-bindings here if you want them to work in normal & visual mode
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      // filetree
      ", n": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && vim_mode == normal && (vim_operator == none || vim_operator == n) && !VimWaiting",
    "bindings": {
      ", w": "workspace::Save",
      ", q": "pane::CloseActiveItem",
      ", l l": ["task::Spawn", { "task_name": "latexmk_view" }]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-h": "pane::ActivatePreviousItem",
      "cmd-shift-l": "pane::ActivateNextItem"
    }
  }
]
